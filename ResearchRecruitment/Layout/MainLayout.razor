@inherits LayoutComponentBase

<MudThemeProvider />
<MudPopoverProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar Color="Color.Primary" Elevation="0" Class="px-6">
        <MudText Typo="Typo.h6" Style="font-weight: 700; color: white;">
            ResearchConnect
        </MudText>
        <MudSpacer />
        <MudButton Href="/" Variant="Variant.Text" Style="font-weight: 500; color: white;">Home</MudButton>
        <MudButton Href="#about" Variant="Variant.Text" Style="font-weight: 500; color: white">About</MudButton>
        <MudButton Href="/researcher-dashboard" Variant="Variant.Filled" Style="border-radius: 20px; padding: 8px 24px; color: white">Login</MudButton>
    </MudAppBar>

    <MudMainContent>
        @Body
    </MudMainContent>
</MudLayout>