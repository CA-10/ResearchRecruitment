@page "/"

<DashboardAppbar />

<div class="hero-section">
    <MudContainer MaxWidth="MaxWidth.Large" Style="position: relative; z-index: 1;">
        <MudStack AlignItems="AlignItems.Center" Spacing="4">

            <MudText Typo="Typo.h3" Align="Align.Center" Style="color: #283593; font-weight: 700;">
                Connecting Researchers and Participants<br />Through an Interactive Map.
            </MudText>

            <MudGrid Justify="Justify.Center" Style="max-width: 900px; margin-top: 1rem;">
                <MudItem xs="12" sm="6">
                    <MudText Typo="Typo.body1" Align="Align.Center" Style="color: black;">
                        Recruit for research projects<br />using a simple, visual platform
                    </MudText>
                </MudItem>
                <MudItem xs="12" sm="6">
                    <MudText Typo="Typo.body1" Align="Align.Center" Style="color: black;">
                        Participants can earn points & redeem<br />rewards for taking part in studies.
                    </MudText>
                </MudItem>
            </MudGrid>

        </MudStack>
    </MudContainer>
</div>

<MudContainer MaxWidth="MaxWidth.Large" Class="my-12">
    <MudGrid Spacing="4" Justify="Justify.Center">

        <!-- Researcher Card -->
        <MudItem xs="12" sm="6" md="4">
            <MudPaper Class="action-card pa-6" Elevation="2" Style="border-radius: 8px; height: 100%; background: white;">
                <MudStack AlignItems="AlignItems.Center" Spacing="3">
                    <MudText Typo="Typo.h5" Align="Align.Center" Style="font-weight: 700; color: #1a237e;">
                        For Researchers
                    </MudText>
                    <MudText Typo="Typo.body2" Align="Align.Center" Style="color: #666;">
                        Post your studies and find qualified participants through our interactive map interface
                    </MudText>
                    <MudButton Variant="Variant.Filled"
                               FullWidth="true"
                               Size="Size.Large"
                               Class="cta-button"
                               Style="background: #1a237e; color: white; border-radius: 8px; margin-top: 1rem; font-weight: 600; text-transform: none;"
                               Href="/register-researcher">
                        Register as Researcher
                    </MudButton>
                </MudStack>
            </MudPaper>
        </MudItem>

        <!-- Find Participant Card -->
        <MudItem xs="12" sm="6" md="4">
            <MudPaper Class="action-card pa-6" Elevation="2" Style="border-radius: 8px; height: 100%; background: white;">
                <MudStack AlignItems="AlignItems.Center" Spacing="3">
                    <MudText Typo="Typo.h5" Align="Align.Center" Style="font-weight: 700; color: #1a237e;">
                        For Researchers
                    </MudText>
                    <MudText Typo="Typo.body2" Align="Align.Center" Style="color: #666;">
                        Search our database of eager participants ready to contribute to your research
                    </MudText>
                    <MudButton Variant="Variant.Filled"
                               FullWidth="true"
                               Size="Size.Large"
                               Class="cta-button"
                               Style="background: #1a237e; color: white; border-radius: 8px; margin-top: 1rem; font-weight: 600; text-transform: none;"
                               Href="/register-researcher">
                        Start Searching
                    </MudButton>
                </MudStack>
            </MudPaper>
        </MudItem>

        <!-- Participant Card -->
        <MudItem xs="12" sm="6" md="4">
            <MudPaper Class="action-card pa-6" Elevation="2" Style="border-radius: 8px; height: 100%; background: white;">
                <MudStack AlignItems="AlignItems.Center" Spacing="3">
                    <MudText Typo="Typo.h5" Align="Align.Center" Style="font-weight: 700; color: #1a237e;">
                        For Participants
                    </MudText>
                    <MudText Typo="Typo.body2" Align="Align.Center" Style="color: #666;">
                        Join studies in your area, contribute to science and earn rewards for your participation
                    </MudText>
                    <MudButton Variant="Variant.Filled"
                               FullWidth="true"
                               Size="Size.Large"
                               Class="cta-button"
                               Href="/register-participant"
                               Style="background: #1a237e; color: white; border-radius: 8px; margin-top: 1rem; font-weight: 600; text-transform: none;">
                        Register as participant
                    </MudButton>
                </MudStack>
            </MudPaper>
        </MudItem>

    </MudGrid>
</MudContainer>

<MudContainer MaxWidth="MaxWidth.ExtraLarge" Style="padding: 0;" Class="my-12 d-flex justify-center">
    <MudPaper Style="width: 80%;" Elevation="0" Class="rewards-section">
        <MudStack AlignItems="AlignItems.Center" Spacing="2">
            <MudText Typo="Typo.h4" Style="color: white; font-weight: 700;">
                Earn Rewards for Participation
            </MudText>
            <MudText Typo="Typo.body1" Style="color: rgba(255,255,255,0.95); max-width: 600px;">
                Participants can earn points and redeem rewards for taking part in studies. Make a difference while getting rewarded!
            </MudText>
        </MudStack>
    </MudPaper>
</MudContainer>

<MudContainer MaxWidth="MaxWidth.Large" Class="my-12 pb-12">
    <MudText Typo="Typo.h4" Align="Align.Center" Style="font-weight: 700; margin-bottom: 3rem; color: #1a237e;">
        Why Choose us?
    </MudText>

    <MudGrid Spacing="6">
        <MudItem xs="12" md="4" Class="feature-item">
            <MudPaper Class="pa-6" Elevation="2" Style="border-radius: 8px; height: 100%; text-align: center;">
                <MudStack AlignItems="AlignItems.Center" Spacing="2">
                    <MudIcon Icon="@Icons.Material.Filled.Map" Class="feature-icon" Style="font-size: 3rem; color: #1a237e;" />
                    <MudText Typo="Typo.h6" Align="Align.Center" Style="font-weight: 700; color: #1a237e;">Interactive Map</MudText>
                    <MudText Typo="Typo.body2" Align="Align.Center" Style="color: #666;">
                        Visualize research opportunities geographically and studies near you
                    </MudText>
                </MudStack>
            </MudPaper>
        </MudItem>

        <MudItem xs="12" md="4" Class="feature-item">
            <MudPaper Class="pa-6" Elevation="2" Style="border-radius: 8px; height: 100%; text-align: center;">
                <MudStack AlignItems="AlignItems.Center" Spacing="2">
                    <MudIcon Icon="@Icons.Material.Filled.Security" Class="feature-icon" Style="font-size: 3rem; color: #1a237e;" />
                    <MudText Typo="Typo.h6" Align="Align.Center" Style="font-weight: 700; color: #1a237e;">Secure and Private</MudText>
                    <MudText Typo="Typo.body2" Align="Align.Center" Style="color: #666;">
                        Your data is protected with industry leading security measures
                    </MudText>
                </MudStack>
            </MudPaper>
        </MudItem>

        <MudItem xs="12" md="4" Class="feature-item">
            <MudPaper Class="pa-6" Elevation="2" Style="border-radius: 8px; height: 100%; text-align: center;">
                <MudStack AlignItems="AlignItems.Center" Spacing="2">
                    <MudIcon Icon="@Icons.Material.Filled.Speed" Class="feature-icon" Style="font-size: 3rem; color: #1a237e;" />
                    <MudText Typo="Typo.h6" Align="Align.Center" Style="font-weight: 700; color: #1a237e;">Simple and Fast</MudText>
                    <MudText Typo="Typo.body2" Align="Align.Center" Style="color: #666;">
                        Quick registration and intuitive interface for seamless experience
                    </MudText>
                </MudStack>
            </MudPaper>
        </MudItem>
    </MudGrid>
</MudContainer>