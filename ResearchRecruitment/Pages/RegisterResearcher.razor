@page "/register-researcher"
@using MudBlazor

<MudContainer MaxWidth="MaxWidth.Medium" Class="my-8">
    <MudPaper Elevation="4" Class="pa-8" Style="border-radius: 20px;">

        <!-- Header Section -->
        <MudStack AlignItems="AlignItems.Center" Spacing="2" Class="mb-6">
            <MudAvatar Color="Color.Primary" Size="Size.Large" Style="width: 80px; height: 80px;">
                <MudIcon Icon="@Icons.Material.Filled.Psychology" Size="Size.Large" />
            </MudAvatar>
            <MudText Typo="Typo.h4" Align="Align.Center" Style="font-weight: 700;">
                Register as a Researcher
            </MudText>
            <MudText Typo="Typo.body1" Align="Align.Center" Color="Color.Secondary" Style="max-width: 500px;">
                "Create your account to post research studies and recruit participants."
            </MudText>
        </MudStack>

        <MudDivider Class="my-6" />

        <!-- Registration Form -->
        <MudForm>
            <MudStack Spacing="4">

                <!-- Full Name -->
                <MudTextField T="string"
                              Label="Full Name"
                              Variant="Variant.Outlined"
                              Required="true"
                              RequiredError="Full name is required"
                              Style="border-radius: 12px;" />

                <!-- Institution/Organization -->
                <MudTextField T="string"
                              Label="Institution / Organization Name"
                              Variant="Variant.Outlined"
                              Required="true"
                              RequiredError="Institution/Organization name is required"
                              Style="border-radius: 12px;" />

                <!-- Email Address -->
                <MudTextField T="string"
                              Label="Email Address"
                              Variant="Variant.Outlined"
                              InputType="InputType.Email"
                              Required="true"
                              RequiredError="Email is required" />

                <!-- Password -->
                <MudTextField T="string"
                              Label="Password"
                              Variant="Variant.Outlined"
                              InputType="InputType.Password"
                              Adornment="Adornment.End"
                              AdornmentAriaLabel="Show Password"
                              Required="true"
                              RequiredError="Password is required"
                              Style="border-radius: 12px;" />

                <!-- Research Field Dropdown -->
                <MudSelect T="string"
                           Label="Research Field"
                           Variant="Variant.Outlined"
                           Required="true"
                           RequiredError="Research field is required"
                           Style="border-radius: 12px;"
                           AnchorOrigin="Origin.BottomCenter">
                    <MudSelectItem Value="@("Psychology")">Psychology</MudSelectItem>
                    <MudSelectItem Value="@("Medicine")">Medicine</MudSelectItem>
                    <MudSelectItem Value="@("Biology")">Biology</MudSelectItem>
                    <MudSelectItem Value="@("Sociology")">Sociology</MudSelectItem>
                    <MudSelectItem Value="@("Education")">Education</MudSelectItem>
                    <MudSelectItem Value="@("Computer Science")">Computer Science</MudSelectItem>
                    <MudSelectItem Value="@("Economics")">Economics</MudSelectItem>
                    <MudSelectItem Value="@("Other")">Other</MudSelectItem>
                </MudSelect>

                <!-- Ethical Standards Checkbox -->
                <MudCheckBox T="string"
                             Label="I confirm that my studies comply with ethical standards."
                             Color="Color.Primary"
                             Required="true"
                             Style="margin-top: 1rem;" />

                <!-- Submit Button -->
                <MudButton Variant="Variant.Filled"
                           Color="Color.Primary"
                           Size="Size.Large"
                           FullWidth="true"
                           Style="border-radius: 12px; margin-top: 2rem; padding: 14px; font-weight: 600; font-size: 1rem;">
                    <MudIcon Icon="@Icons.Material.Filled.PersonAdd" Class="mr-2" />
                    Create Account
                </MudButton>

            </MudStack>
        </MudForm>

        <!-- Additional Info -->
        <MudStack AlignItems="AlignItems.Center" Class="mt-6">
            <MudText Typo="Typo.body2" Color="Color.Secondary">
                Already have an account?
                <MudLink Href="#login" Style="font-weight: 600; color: #667eea;">Login here</MudLink>
            </MudText>
        </MudStack>
    </MudPaper>
</MudContainer>